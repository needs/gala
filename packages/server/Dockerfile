# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build server`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 4200:4200 -t server`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=4200

WORKDIR /app

RUN addgroup --system server && \
          adduser --system -G server server

COPY dist/packages/server server
RUN chown -R server:server .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix server --omit=dev -f install

COPY packages/app/prisma/schema.prisma server/prisma/schema.prisma
RUN cd server && npx prisma generate

CMD [ "node", "server" ]
