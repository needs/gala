# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build website`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t website`.
FROM docker.io/node:20-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system website && \
          adduser --system -G website website

COPY dist/apps/website .
RUN chown -R website:website .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --omit=dev -f install

CMD [ "npm", "start" ]
