{
  "version": "2.0.0",
  "presentation": {
    "echo": false,
    "reveal": "silent",
    "focus": false,
    "panel": "dedicated",
  },
  "inputs": [
    {
      "id": "terminateFrontend",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "Frontend"
    },
    {
      "id": "terminateWebsocket",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "Websocket"
    },
  ],
  "tasks": [
    {
      "label": "Launch local dev",
      "dependsOn": [
        "Terminate Serve",
        "Npm install",
        "Start Serve"
      ],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Terminate Serve",
      "dependsOn": [
        "Terminate Frontend",
        "Terminate Websocket",
      ],
    },
    {
      "label": "Terminate Frontend",
      "type": "process",
      "command": "echo ${input:terminateFrontend}",
    },
    {
      "label": "Terminate Websocket",
      "type": "process",
      "command": "echo ${input:terminateWebsocket}",
    },
    {
      "label": "Npm install",
      "type": "shell",
      "command": "npm install",
      "presentation": {
        "close": true
      }
    },
    {
      "label": "Start Serve",
      "dependsOn": [
        "Frontend",
        "Websocket",
      ],
    },
    {
      "label": "Frontend",
      "type": "shell",
      "command": "npx nx serve gala",
      "isBackground": true,

    },
    {
      "label": "Websocket",
      "type": "shell",
      "command": "HOST=localhost PORT=1234 npx y-websocket",
      "isBackground": true,

    },
  ]
}
